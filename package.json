{
  "name": "antv-g2",
  "version": "0.0.0",
  "description": "@antv/g2 mono repo.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "lint": "lint-staged",
    "test": "lerna run test",
    "coverage": "exit 0",
    "build-all": "lerna run build",
    "ci": "run-s build test"
  },
  "devDependencies": {
    "@antv/torch": "~1.0.5",
    "chai": "~4.1.2",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build-all test"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts}": [
      "tslint -c tslint.json --fix",
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
